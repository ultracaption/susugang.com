<div id="head_wrapper">
  <div id="login_info">
    <%= link_to 'Facebook', 'http://www.facebook.com/SMWUklassmate', class: 'label label-info' %>
    <span class="label label-success"><%= current_user.username %>님 환영합니다.</span>
    <%= link_to '[로그아웃]', destroy_user_session_path, class: 'label' %>
</div>
  <div id="search_wrapper">
    <a href="/"><div id="head_main_logo"></div></a>
    <div id="total_view"><span id="total_view_number"><%= Assessment.count %></span>&nbsp;개의 강의평이 있습니다.</div>
  </div>

  <div class="navbar">
    <div class="navbar-inner">
      <ul class="nav">
        <li><%= link_to '최신강의평', lectures_path %></li>
        <li><%= link_to '내가 평가한 강의', lectures_path %></li>
        <li><%= link_to '검색결과', search_lectures_path %></li>
      </ul>
      <%= form_tag search_lectures_path, class: 'navbar-search pull-right' do %>
        <%= text_field_tag :term, '', class: 'search-query', placeholder: '강의명으로 검색하세요' %>
        <%= submit_tag '검색', class: 'btn btn-search' %>
      <% end %>
    </div>
  </div>
</div>
