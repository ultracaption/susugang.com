<div class="login-form-container">
  <%= form_for @user, url: registrations_path do |f| %>
    <h2 class="login-header">SIGNUP</h2>
    <% unless @user.errors.empty? && @validation_passed %>
    <div id="validation-error-container">
      <%= @user.errors.full_messages.join('<br/>').html_safe %>
      <%= @validation_error_message %>
  </div>
<% end %>
    <%= f.label :username, '아이디', class: 'control-label' %>
      <%= f.text_field :username, class: 'input-block-level', placeholder: 'ID' %>
    <%= f.label :password, '비밀번호', class: 'control-label' %>
      <%= f.password_field :password, class: 'input-block-level', placeholder: 'PASSWORD' %>
    <%= f.label :password_confirmation, '비밀번호 확인', class: 'control-label' %>
    <%= f.password_field :password_confirmation, class: 'input-block-level', placeholder: 'PASSWORD' %>
    <label class="control-label"><%= Registration::VALIDATION_QUESTIONS[session[:validation_question_number]][0].html_safe %></label>
    <input type="text" name="validation_answer" class="input-block-level" placeholder="<%= Registration::VALIDATION_QUESTIONS[session[:validation_question_number]][1].length.to_s + "글자" %>"></input>
    <div class="actions">
      <%= f.submit '가입하기', class: 'btn btn-block btn-primary' %>
    </div>
<% end %>
</div>

