<div class="container">
  <div class="row first-view-container">
    <div class="span6">
      <h1 class="main-logo">DULE</h1>
    </div>
    <div class="span6 login-form-container">
      <form class="form-horizontal">
        <div class="control-group">
          <label class="control-label" for="inputEmail">아이디</label>
          <div class="controls">
            <input type="text" id="inputEmail" placeholder="아이디">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputPassword">비밀번호</label>
          <div class="controls">
            <input type="password" id="inputPassword" placeholder="비밀번호">
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn">로그인</button>
            <%= link_to '가입하기', new_registration_path, class: 'btn' %>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
